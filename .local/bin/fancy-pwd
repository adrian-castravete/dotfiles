#!/usr/bin/env perl

use strict;
use warnings;

my $param = shift;
my $useBold = ($param eq '-b');
my $home = $ENV{'HOME'};

sub shortenDirName {
  my $path = shift;
  my $name = shift;

  my $i = 1;
  my $shortName = $name;
  while ($i <= length $name) {
    ($shortName = $name) =~ s/^(.{$i}).*/$1/;
    (my $ipath = $path) =~ s/~/$home/;
    my $count = `find '$ipath/.' -maxdepth 1 -type d -name '$shortName*' | wc -l`;
    chomp $count;
    if ($count == 1) {
      $i = length($name) + 1;
    }
    $i += 1;
  }

  return $shortName;
}

my $path = `pwd`;
chomp $path;
$path =~ s{$home}{~};

my (@cpath, $current);
if ($path eq "~") {
  @cpath = ();
  $current = $path;
} else {
  @cpath = split(/\//, $path);
  $current = pop @cpath;
}

if (! $current) {
  $current = "/";
}

if ($#cpath >= 0) {
  my $accum = $cpath[0];
  for my $i (1 .. $#cpath) {
    my $c = $cpath[$i];
    $cpath[$i] = shortenDirName($accum, $c);
    $accum = "$accum/$c";
  }

  print join("/", @cpath);
  print "/";
}
if ($useBold) {
  print "\e[1m";
}
print $current;
if ($useBold) {
  print "\e[m";
}
